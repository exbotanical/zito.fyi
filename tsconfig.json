{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react-jsx",
    "lib": ["dom", "es2015", "es2017", "es2019"],
    "types": ["react", "jest", "@testing-library/jest-dom"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["test/*"]
    }
  },
  "exclude": ["cypress.config.ts"],
  "include": ["node", "src", "test", "*.ts", "config"]
}
